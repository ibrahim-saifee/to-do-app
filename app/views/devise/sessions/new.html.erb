<!-- Page Content -->
<div class="container page-container">
  <div class="row page-body-container">
    <div class="col-lg-4"></div>

    <div class="col-lg-4 devise-forms text-right">
      <h3 class="task-type"> Log in </h3>
      <div class="portlet-body">
        <div class="form-body" style="color: white;">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="form-group row">
              <label class="col-md-4 control-label required">Email: </label>
              <div class="col-md-8">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control required' %>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-md-4 control-label required">Password: </label>
              <div class="col-md-8">
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control required' %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-4"></div>
              <div class="col-md-5">
                <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                <% end -%>
              </div>
              <div class="col-md-2">
                <%= f.submit 'Log in', class: 'btn btn-success btn-sm' %>
              </div>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
  <!-- /.row -->
</div>
<!-- /.container -->
