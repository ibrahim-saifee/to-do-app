<!-- Page Content -->
<div class="container page-container">
  <div class="row page-body-container">
    <div class="col-lg-4"></div>

    <div class="col-lg-4 devise-forms text-right">
      <h3 class="task-type"> Sign up </h3>
      <div class="portlet-body">
        <div class="form-body" style="color: white;">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group row">
              <label class="col-md-4 control-label required">Full Name: </label>
              <div class="col-md-8">
                <%= f.text_field :full_name, autofocus: true, class: 'form-control required' %>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-md-4 control-label required">Email: </label>
              <div class="col-md-8">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control required' %>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-md-4 control-label required">Password: </label>
              <div class="col-md-8">
                <%= f.password_field :password, autocomplete: "new-password", class: 'form-control required' %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
              </div>
            </div>

            <div class="form-group row">
              <label class="col-md-4 control-label required">Confirm Password: </label>
              <div class="col-md-8">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control required' %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-9"></div>
              <div class="col-md-2">
                <%= f.submit 'Sign up', class: 'btn btn-success btn-sm' %>
              </div>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
