<!-- Modal -->
<div class="modal fade <%= modal_id %>" role="dialog">
  <div class="modal-dialog" style="max-width: 550px;">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h6> Create New Task </h6>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <div class="portlet-body">
          <div class="form-body">

            <%= form_for task, html: { class: "form-horizontal form-row-seperated" } do |f| %>
              <div class="form-group row">
                <label class="col-md-3 control-label required">Title: </label>
                <div class="col-md-8">
                  <%= f.text_field :title, class: "form-control required" %>
                </div>
              </div>

              <div class="form-group row">
                <label class="col-md-3 control-label">Description: </label>
                <div class="col-md-8">
                  <%= f.text_area :description, class: "form-control required" %>
                </div>
              </div>

              <div class="form-group row">
                <label class="col-md-3 control-label required">Type: </label>
                <div class="col-md-8">
                  <%= f.select :task_type_id, options_from_collection_for_select(TaskType.all, 'id', 'name', f.object.task_type_id), {}, class: "form-control" %>
                </div>
              </div>

              <div class="form-group row">
                <label class="col-md-3 control-label">Due Date: </label>
                <div class="col-md-8">
                  <%= f.text_field :due_date, class: "form-control datepicker", style: 'z-index:100 !important;', readonly: true, size: "16", value: f.object.try(:due_date).try(:strftime, '%m/%d/%Y') %>
                </div>
              </div>

              <div class="form-group row">
                <div class="actions col-md-11 text-right">
                  <%= f.submit 'Save', class: 'btn btn-success btn-sm' %>
                  <%= f.submit 'Reset', class: 'btn btn-sm', type: 'reset' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
