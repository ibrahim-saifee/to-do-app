<!-- Page Content -->
<div class="container page-container">
  <!-- Page Heading -->
  <button class="btn">
    Add New Task &nbsp; <i class="fa fa-plus"></i>
  </button>

  <div class="row page-body-container">
    <% @tasks.each do |task_type, tasks| %>
      <div id="<%= "#{task_type}_list" %>" class="col-lg-4 task-type-col" data-url='<%= update_position_tasks_path %>'>
        <h3 class="task-type pin"> <%= "#{task_type.to_s.humanize.capitalize} Tasks" %> </h3>
        <% tasks.each do |task| %>
          <div class="col-sm-12 portfolio-item" id="<%= dom_id(task) %>">
            <div class="card h-100">
              <div class="card-body">
                <h3 class="card-title">
                  <a href="#"> <%= "#{task.title} (#{task.type})" %> </a>
                </h3>
                <p class="card-text"> <%= task.description %> </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <!-- /.row -->
</div>
<!-- /.container -->
